<style>
    /*Popup Window*/
    .header {
        height: 245px;
        padding: 30px 0;
    }

        .header [class*='col-'] {
            height: 100%;
            position: relative;
        }

            .header [class*='col-']:nth-child(odd) *,
            .header .col-1-2 a {
                position: absolute;
                top: 50%;
                left: 43%;
                transform: translate(-50%, -50%);
            }

            .header [class*='col-']:nth-child(2) {
                text-align: center;
                vertical-align: middle;
            }

                .header [class*='col-']:nth-child(2) a {
                    color: #fff;
                    text-transform: uppercase;
                    white-space: nowrap;
                }

        .header .col-1-2 a:hover {
            text-decoration: none;
        }

        .header .col-1-2 a p {
            margin: 0;
        }

            .header .col-1-2 a p:nth-child(2) {
                font-size: 30px;
                margin: 10px 0;
            }

        .header .align-right {
            white-space: nowrap;
        }

    .header {
        display: flex;
        flex-direction: row;
    }

    .auth-icon {
        padding-left: 30px
    }

    .header .auth-text {
        margin-top: 25px;
    }

    .header [class*='col-']:last-child .right-container {
        position: absolute;
        top: 50%;
        right: 0;
        transform: translateY(-50%);
    }

        .header [class*='col-']:last-child .right-container:after {
            content: "";
            display: table;
            clear: both;
        }



    .header [class*='col-']:last-child a {
        color: #fff;
        text-transform: uppercase;
    }

    .icon {
        font-size: 20px;
        padding-left: 10px;
        cursor: pointer;
    }

        .icon:hover {
            text-decoration: none;
        }

