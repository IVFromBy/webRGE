        padding-left: 10px;
    }

        .selectLanguage:hover {
            font-size: 14px;
            color: white;
        }

    #auth-id-card {
        white-space: nowrap;
        text-transform: uppercase;
        color: #fff;
    }

        #auth-id-card:hover {
            cursor: pointer;
        }

    #authorization {
        position: relative;
    }

        #authorization div {
            position: absolute;
            display: none;
            bottom: 0;
            right: 128px;
            width: 700px;
            padding: 16px;
            background-color: #fff;
            border: 1px solid #000;
            border-radius: 4px;
        }

            #authorization a:hover + div,
            #authorization div:hover {
                display: block;
            }

            #authorization div p {
                white-space: normal;
                margin: 0;
                text-align: left;
            }

                #authorization div p a {
                    color: #167CC4;
                    text-transform: capitalize;
