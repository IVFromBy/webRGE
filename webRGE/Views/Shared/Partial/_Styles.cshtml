        opacity: .60;
    }

    .white_content5 {
        display: none;
        position: fixed;
        top: 45%;
        left: 40%;
        width: 20%;
        padding: 16px;
        border: 16px solid orange;
        background-color: white;
        z-index: 1002;
        overflow: auto;
    }



    .align-right {
        text-align: right;
    }

    .selectLanguage {
        font-size: 14px;
