    <script type="text/javascript">
        $(function () {
          $(window).scroll(function () {
            if ($(this).scrollTop() != 0) {
              $("#toTop").fadeIn();
            } else {
              $("#toTop").fadeOut();
            }
          });

          $("#toTop").click(function () {
            $("body,html").animate(
              {
                scrollTop: 0,
              },
              800
            );
          });
        });
    </script>

<script type="text/javascript" src="~/js/jquery.easing.1.3.js"></script>

<script type="text/javascript">
    $(function() {
        $('#sdt_menu > li').bind('mouseenter', function() {
            var $elem = $(this);
            $elem.find('img').stop(true)
                .animate({ 'width' : '189px', 'height' : '119px', 'left' : '0px' }, 400, 'easeOutBack')
                .addBack().find('.sdt_wrap').stop(true)
                .animate({ 'top' : '120px' }, 400, 'easeOutBack')
                .addBack().find('.sdt_active').stop(true)
                .animate({ 'height' : '120px' }, 400, function() {
                    var $sub_menu = $elem.find('.sdt_box');

                    if ($sub_menu.length) {
                        var left = '180px';

                        if ($elem.parent().children().length == $elem.index() + 1) {
                            left = '-180px';
                        }

                        $sub_menu.show().animate({ 'left' : left }, 200);
                    }
                });
        }).bind('mouseleave', function() {
            var $elem = $(this);
            var $sub_menu = $elem.find('.sdt_box');

            if ($sub_menu.length) {
                $sub_menu.hide().css('left', '0px');
            }

            $elem.find('.sdt_active').stop(true)
                .animate({ 'height' : '0px' }, 200)
                .addBack().find('img').stop(true)
                .animate({ 'width' : '0px', 'height' : '0px','left' : '85px' }, 300)
                .addBack().find('.sdt_wrap').stop(true)
                .animate({ 'top' : '25px' }, 400);
        });

    });
</script>